@model IEnumerable<Core.Domain.Product>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <button type="button" class="btn mb-1 btn-outline-primary" onclick="window.location.href = '@Url.Action("Create")';" >Create New Product</button>
                </li>
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @*<div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Search Transaction</h4>
                            <div class="basic-form">
                                <form class="form-horizontal" asp-controller="Product" asp-action="List" method="get">
                                    @await Html.PartialAsync("Search")
                                </form>
                            </div>
                        </div>
                    </div>*@
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Products</h4>
                        <div class="basic-form">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>SKU</th>
                                        <th>Name</th>
                                        <th>Photo</th>
                                        <th>Stok</th>
                                        <th>Unit Price</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        var bgcolor = "black";

                                        if (item.Quantity == 0)
                                        {
                                            bgcolor = "red";
                                        }
                                        else if (item.Quantity < 10)
                                        {
                                            bgcolor = "yellow";
                                        }

                                        <tr style="color:@bgcolor;">
                                            <td width="100"><a>@item.Sku</a></td>
                                            <td width="140"><a>@item.Name</a></td>
                                            <td width="140"> <img src="~/Images/@item.ImageUrl" width="100" height="100" /> </td>
                                            <td width="140"><a>@item.Quantity</a></td>
                                            <td width="140"><a>@item.UnitPrice ₺</a></td>
                                            <td style="text-align:right" width="160">

                                                <a href="@Url.Action("Edit","Product", new { id = item.Id })"><span class="label gradient-1 rounded">Edit</span></a>&nbsp;
                                                <a href="@Url.Action("Delete","Product", new { id = item.Id })"><span class="label gradient-2 rounded">Delete</span></a>

                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>